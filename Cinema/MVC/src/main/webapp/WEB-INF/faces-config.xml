<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="4.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                                  https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd" >

    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>

        <message-bundle>
            i18n.jsf_messages
        </message-bundle>
    </application>

    <navigation-rule>
        <from-view-id>/select-user.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goToMovieSelection</from-outcome>
            <to-view-id>/select-movie.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/select-movie.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>goToTicketCreation</from-outcome>
            <to-view-id>/create-ticket.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/create-ticket.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ticketWasCreatedSuccessfully</from-outcome>
            <to-view-id>/show-tickets.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>ticketCouldNotBeCreated</from-outcome>
            <to-view-id>/create-ticket-error.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>