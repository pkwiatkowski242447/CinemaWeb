<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="4.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee
                                  https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd" >

    <application>
        <locale-config>
            <default-locale>pl</default-locale>
            <supported-locale>pl</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>

        <resource-bundle>
            <base-name>i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>

        <message-bundle>
            i18n.jsf_messages
        </message-bundle>
    </application>

    <!-- Movie navigation rules -->

    <navigation-rule>
        <from-view-id>/create-movie.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>movieCreatedSuccessfully</from-outcome>
            <to-view-id>/create-movie-success.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/show-movies.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>movieCouldNotBeDeleted</from-outcome>
            <to-view-id>/delete-movie-error.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!-- Client navigation rules -->

    <navigation-rule>
        <from-view-id>/create-account.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>clientCreatedSuccessfully</from-outcome>
            <to-view-id>/create-account-success.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <!-- Ticket navigation rules -->

    <navigation-rule>
        <from-view-id>/create-ticket.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ticketWasCreatedSuccessfully</from-outcome>
            <to-view-id>/create-ticket-success.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/show-tickets.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>ticketCouldNotBeDeleted</from-outcome>
            <to-view-id>/delete-ticket-error.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

</faces-config>